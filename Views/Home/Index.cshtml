@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Book>

<!--Emma Haynes 3-1-21-->

<div class="bg-secondary">

    <header class="m-5 p-5 text-white">
        <h1>Buy Books!!</h1>
    </header>

    @foreach (var x in Model) //Loops through and prints data for each book in database
    {
        <div class="card card-outline-primary m-5 pb-5">
            <div class="bg-faded p-1">
                <h3>
                    @x.Title
                    <span class="badge badge-pill badge-primary" style="float:right">
                        <small>@x.Price.ToString("c")</small>
                    </span>
                </h3>
            </div>
            <div class="card-text p-1">
                <p>Author: @x.AuthorFirstName @x.AuthorMiddleName @x.AuthorLastName</p>
                <p>Publisher: @x.Publisher</p>
                <p>ISBN: @x.ISBN</p>
                <p>Classification: @x.Classification</p>
                <p>Category: @x.Category</p>
            </div>

        </div>
    }
</div>
