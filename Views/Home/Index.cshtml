@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel
<!--Emma Haynes 3-1-21-->

<div>

    @foreach (var x in Model.Books) //Loops through and prints data for each book in database
    {
        <div class="card card-outline-primary m-5 pb-5 text-dark">
            <div class="bg-faded p-1">
                <h3>
                    @x.Title
                    <span class="badge badge-pill badge-primary" style="float:right">
                        <small>@x.Price.ToString("c")</small>
                    </span>
                </h3>
            </div>
            <div class="card-text p-1">
                <p>Author: @x.AuthorFirstName @x.AuthorMiddleName @x.AuthorLastName</p>
                <p>Publisher: @x.Publisher</p>
                <p>ISBN: @x.ISBN</p>
                <p>Classification: @x.Classification</p>
                <p>Category: @x.Category</p>
                <p>Number of Pages: @x.NumPages</p>
            </div>

        </div>
    }

    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
         page-class-normal="btn-outline-dark"
         page-class-selected="btn-primary"
         class="btn-group pull-right m-1 p-2"></div>
</div>
