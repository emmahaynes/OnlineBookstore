<!DOCTYPE html>
<html lang="en">
<!--Emma Haynes 3-10-21-->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineBookstore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">ONLINE BOOKSTORE</div>
                <div class="col-6 text-right">
                    <vc:cart-summary /> <!--Add the partial view cart here-->
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1 p-1 bg-info text-white">
        <div id="blah" class="col-3">
            <h1>Buy books today!</h1>
            <vc:navigation-menu /> <!--Adding partial view nav menu-->
        </div>
        <div class="col-8">
            @RenderBody()
        </div>
    </div>
</body>
</html>
